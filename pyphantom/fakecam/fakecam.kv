<Mag@BoxLayout>:
    orientation: 'vertical'
    text: ''
    state: 'normal'
    mag_number: 0
    Label:
    BoxLayout:
        Label:
        ToggleButton:
            group: 'mags'
            size_hint: None, None
            size: '200dp', '200dp'
            border: 0, 0, 0, 0
            background_normal: 'mag_out.png'
            background_down: 'mag_in.png'
            state: root.state
            mag_number: root.mag_number
            on_state: app.toggle(*args)
        Label:
    Label:
        color: 0, 0, 0, 1
        text: root.text
    Label:

<RootWidget>:
    canvas:
        Color:
            rgb: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            width: '250dp'
            size_hint_x: None
            BoxLayout:
                orientation: 'vertical'
                Image:
                    source: 'logo.png'
                    size_hint_y: None
                    size_hint_x: None
                    allow_stretch: True
                    width: '150dp'
                    height: '150dp'
                    pos_hint: {'center_x':.5, 'center_y': .5}

                Label:
        BoxLayout:
            Label:
                size_hint_x: 0.3
            Mag:
                mag_number: 1
                text: 'CineMag #1'
                state: 'down'
            Mag:
                mag_number: 2
                text: 'CineMag #2'
            Mag:
                mag_number: 3
                text: 'CineMag #3'
            Label:
                size_hint_x: 0.3
